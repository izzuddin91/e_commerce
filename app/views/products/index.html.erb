<%= form_for @product, :html => { :multipart => true } do |f| %>
<br>

  <%= f.label :image %>
  <%= f.file_field :image %>
<br>
      <%= f.label :product_name %>
      <%= f.text_field :product_name %>
<br>
      <%= f.label :description %>
      <%= f.text_area :description %>
<br>

      <%= f.label :quantity %>
      <%= f.text_field :quantity %>
      <br>
  <%= f.submit "Create product", class: "btn btn-primary" %>
<% end %>


